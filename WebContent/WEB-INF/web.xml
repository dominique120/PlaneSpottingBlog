<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ISIL_PRACTICA_JAVAWEB_DVERELLEN</display-name>
<welcome-file-list>
    <welcome-file>index</welcome-file>
</welcome-file-list>

<servlet>
    <servlet-name>indexServlet</servlet-name>
    <servlet-class>com.verellen.blog.web.IndexServlet</servlet-class>
</servlet>

<servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.verellen.blog.web.LoginServlet</servlet-class>
</servlet>

<servlet>
    <servlet-name>blogPostServlet</servlet-name>
    <servlet-class>com.verellen.blog.web.BlogPostServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>indexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>blogPostServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
    <url-pattern>/BlogPostServlet</url-pattern>
</servlet-mapping>

</web-app>